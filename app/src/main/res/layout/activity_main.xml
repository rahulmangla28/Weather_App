<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideInset"
    android:scrollbars="vertical"
    android:textAlignment="viewStart"
    android:theme="@style/CardView.Dark"
    android:visibility="visible"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/dropdown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="732dp"
        android:layout_marginEnd="8dp"
        android:layout_x="100dp"
        android:layout_y="80dp"
        android:background="@drawable/dropdown"
        android:contentDescription="@string/no"
        android:focusable="true"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="@+id/weather_forecast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weather_forecast" />

    <TextView
        android:id="@+id/weather_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:text="@string/Weather_Forecast"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown" />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/searchbar"
        android:iconifiedByDefault="false"
        android:inputType="text"
        android:orientation="horizontal"
        android:queryHint="@string/hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_forecast"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/search_bar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/city_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/city_name"
            android:textSize="28sp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="4dp"
            android:text="@string/time"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/weather_condition"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/weather_condition"/>

        <TextView
            android:id="@+id/temperature_value"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="390dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/temperature_value" />

        <TextView
            android:id="@+id/ht_lt_value"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="350dp"
            android:text="@string/ht_lt_value"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>